{{#if user}}

<div class="container">
  <div class="row">
    <div class="col mx-auto">
      <div class="card text-center">
        <div class="card-header" align="left">
          <h4>Daños en <b>{{sname}}</b></h4>

       
        </div>
        <div class="card-body" id="ttk">
          
            <table class="table"  id="table">
              <thead>
                <tr align="center">
                      <th><i class="fas fa-bolt"></i></th><th>N°</th><th>Daño</th><th>Unidad</th> <th>Cantidad</th><th>Fotos</th>  
                </tr>
              </thead>
              <tbody>
                {{#damages as |ar|}}
                <tr >   
                    <td><a href="/sectors/?id_case={{ar.id_case}}&id_sector={{ar.id_sector}}"><i class="fas fa-edit"></i></a></td>         
                    <td>{{sum @key 1}}</td><td>{{ar.damage_name}}</td><td>{{ar.damage_unit}}</td> <td>{{ar.damage_size}}</td><td><a href="">Fotos</a></td><td>{{ar.shs}}</td>
                </tr>
                {{/damages}}
                 
              </tbody>
             
            </table>  
            <br/> 
            <table class="table" > 
              <thead>
                <tr align="center">
                      <th>Daño</th><th></th><th>Cantidad</th><th>Subir Foto</th><th></th><th></th>  
                </tr>
              </thead>
              <tbody >
              <tr><h5>Añadir nuevo registro</h5></tr>
                 
                <form action="/damages" method="POST" enctype="multipart/form-data">
                    <tr>            
                        
                        <td><select class="form-select" aria-label=".form-select-lg example" name="id_damage">
                        {{#each defaultDamages}}{{this.id_damage}}<option value="{{this.id_damage}}"  selected="true">{{this.damage_name}} ({{this.damage_unit}})</option>{{/each}}
                        </select></td> 
                        <td></td>
                        <td><input type="Number" id="damage_size" name="damage_size"></td>
                        <td> <input type="file" name="image"></td>
                        <input type="hidden" name="id_case" id="id_case" value="{{id_case}}">
                        <input type="hidden"  name="id_sector"  id="id_sector" value="{{id_sector}}">
                        <td colspan="2" style=""><button class="btn btn-success btn-block" type="submit" ><i class="fa-solid fa-check"></i></button></td> 
                        
                    </tr>
                 </form>
              </tbody>

            </table>           
        </div>
      </div>
    </div>
  </div>
</div>
{{else}}
{{/if}}
